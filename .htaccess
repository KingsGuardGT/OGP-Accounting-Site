<IfModule mod_rewrite.c>
    RewriteEngine On

    # Internally rewrite the root to the Laravel front controller in /public
    RewriteRule ^$ public/index.php [L]

    # If the request is not for an existing file or directory, rewrite to /public
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
