DirectoryIndex index.php
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # If already under /public, do nothing
    RewriteCond %{REQUEST_URI} ^/public/ [NC]
    RewriteRule ^ - [L]

    # Root request: send directly to public/index.php to avoid 403 on directory
    RewriteRule ^$ public/index.php [L]

    # Serve existing files/directories in repo root as-is
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Everything else -> /public
    RewriteRule ^(.*)$ public/$1 [L,QSA]
</IfModule>
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Internally rewrite the root to the Laravel front controller in /public
    RewriteRule ^$ public/index.php [L]

    # If the request is not for an existing file or directory, rewrite to /public
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
